{
    "platforms": {        
        "nd":{
            "global": {
                "data":{
                    "app": {
                        "id": "{APP_ID}",
                        "name": "网龙物联网",
                        "platform": {
                            "id": "{PLF_ID}",
                            "name": "网龙集控平台",
                            "domain": "+",
                            "devices": {},
                            "mqtt": {
                                "topics": {
                                    "subs": {
                                        "device": {
                                            "dev_evt_report":   "{app}/{dom}/dev/+/+/+/evt/report",
                                            "dev_evt_status":   "{app}/{dom}/dev/+/+/+/evt/status",
                                            "dev_svc_get":      "{app}/{dom}/dev/+/+/+/svc/get",
                                            "dev_svc_set":      "{app}/{dom}/dev/+/+/+/svc/set",
                                            "dev_svc_login":    "{app}/0/dev/+/0/0/svc/login",                        
                                            "dev_svc_handshake":"{app}/{dom}/dev/+/+/+/svc/handshake"
                                        },
                                        "platform": {
                                            "plf_heartbeat":    "ndiot/client/+/+/+/heartbeat",
                                            "plf_dev_ctrl":     "ndiot/client/+/+/+/dev_ctrl",
                                            "plf_dev_prop":     "ndiot/client/+/+/+/dev_prop",
                                            "plf_dev_srv":      "ndiot/client/+/+/+/dev_srv"
                                        }
                                    },
                                    "pubs": {
                                        "platform":{
                                            "plf_heartbeat":    "ndiot/server/{dom}/{pdev}/{dev}/heartbeat",
                                            "plf_dev_ctrl":     "ndiot/server/{dom}/{pdev}/{dev}/dev_ctrl",                        
                                            "plf_dev_prop":     "ndiot/server/{dom}/{pdev}/{dev}/dev_prop",
                                            "plf_dev_evt":      "ndiot/server/{dom}/{pdev}/{dev}/dev_evt",
                                            "plf_dev_srv":      "ndiot/server/{dom}/{pdev}/{dev}/dev_srv"
                                        }
                                    }
                                }                            
                            }            
                        }
                
                    },
                    "platform": {},
                    "devices": {},
                    "topics": {},
                    "ids": {},
                    "mqtt": {}                    
                },
                "common": {},
                "ids": {
                    "app": "{APP_ID}",
                    "plf": "{PLF_ID}"
                }
            }
        }           
    },
    "dispatcher": {
        "global": {
            "data": {
                "app": {
                    "id": "{app}",
                    "name": "网龙物联网",
                    "domain": {
                        "id": "{dom}",
                        "name": "网龙公司",
                        "dispatcher": {
                            "id": "{dsp}",
                            "name": "调度器",
                            "edges": {
                                "ND--20200609EVI" : {
                                    "id": "{edg}",
                                    "enabled": 1
                                }
                            },                
                            "devices": {},   
                            "mqtt": {
                                "topics": {
                                    "subs": {
                                        "edg_evt_status":    "{app}/{dom}/edg/+/+/+/evt/status",
                                        "dev_evt_status":    "{app}/{dom}/dev/+/+/+/evt/status",
                                        "dev_evt_report":    "{app}/{dom}/dev/+/+/+/evt/report"
                                    },
                                    "services":{
                                        "dsp_svc_login":        "{app}/{dom}/+/+/dsp/{dsp}/svc/login",
                                        "dsp_svc_get_z2m_datafile": "{app}/{dom}/+/+/dsp/{dsp}/svc/get_z2m_datafile",
                                        "dsp_svc_set_z2m_datafile": "{app}/{dom}/+/+/dsp/{dsp}/svc/set_z2m_datafile"
                                    },
                                    "pubs":{
                                        "dev_svc_login":        "login",
                                        "edg_svc_login":        "login",
                                        "edg_svc_get_z2m_datafile": "get_z2m_datafile",                                    
                                        "dsp_evt_status": "status"
                                    }
                                }
                            },             

                            "z2m": {
                                "defaultDatafile": {
                                    "configuration.yaml": {
                                        "homeassistant": false,
                                        "permit_join": false,
                                        "mqtt": {
                                            "base_topic": "{mqtt_base_topic}",
                                            "server": "{mqtt_server}",
                                            "user": "{mqtt_user}",
                                            "password": "{mqtt_password}"
                                        },
                                        "serial": {
                                            "port": "{serial_port}"
                                        },
                                        "device_options": {
                                            "legacy": false
                                        },
                                        "advanced": {
                                            "pan_id": "GENERATE",                                        
                                            "channel": 11,
                                            "network_key": "GENERATE",
                                            "baudrate": 115200,
                                            "homeassistant_legacy_entity_attributes": false,
                                            "legacy_api": false,
                                            "log_level": "debug"
                                        },
                                        "frontend": {
                                            "port": "{frontend_port}"
                                        }
                                    }
                                }
                            }                                                                               
                        }
                    }
                },
            
                "domain": {},
                "dispatcher": {},
                "edges": {},
                "devices": {},
                "mqtt": {},
                "topics" : {},
                "ids": {},
                "z2m": {}                
            },
            "common": {},
            "ids": {
                "app": "{APP_ID}",
                "dom": "{DOM_ID}",
                "dsp": "{DSP_ID}",
                "mqtt": "{app}_{dom}_dsp_{dsp}"
            }
        }
    },
    "edge": {
        "global": {
            "data": {
                "app": {
                    "id": "{app}",
                    "name": "网龙物联网",
                    "domain": {
                        "id": "{dom}",
                        "name": "网龙公司",
                        "dispatcher": {
                            "id": "{dsp}",
                            "name": "调度器",
                            "events": {},
                            "edge": {
                                "id": "{edg}",
                                "name": "边缘服务",
                                "events": {},
                                "devices":{},
                                "mqtt": {
                                    "topics": {
                                        "subs": {
                                            "dev_evt_report": "{app}/{dom}/dev/+/edg/{edg}/evt/report",
                                            "dsp_evt_status": "{app}/{dom}/dsp/{dsp}/0/0/evt/status"
                                        },
                                        "dysubs": {
                                            "dev_evt_status": "{app}/{dom}/dev/{dev}/0/0/evt/status",
                                            "dev_evt_penet": "{app}/{dom}/dev/{dev}/edg/{edg}/evt/penet"
                                        },
                                        "services": {
                                            "edg_svc_login": "{app}/{dom}/dsp/{dsp}/edg/{edg}/svc/login",
                                            "edg_svc_handshake": "{app}/{dom}/dev/+/edg/{edg}/svc/handshake",
                                            "edg_svc_get_z2m_datafile": "{app}/{dom}/dsp/{dsp}/edg/{edg}/svc/get_z2m_datafile",
                                            "edg_svc_set_z2m_datafile": "{app}/{dom}/dsp/{dsp}/edg/{edg}/svc/set_z2m_datafile"
                                        },
                                        "pubs": {
                                            "dsp_svc_login": "login",
                                            "dsp_svc_get_z2m_datafile": "get_z2m_datafile",
                                            "dsp_svc_set_z2m_datafile": "set_z2m_datafile",
                                            "edg_evt_status": "status",
        
                                            "dev_svc_get": "get",
                                            "dev_svc_set": "set",
                                            "dev_svc_penet": "penet",
                                            "dev_svc_handshake": "handshake"
                                        }
                                    }
                                }     
                            }
                        }                        
                    }
                },
                "domain": {},
                "dispatcher": {},
                "edge": {},
                "devices": {},
                "mqtt": {},
                "topics": {},
                "ids": {}
            },
            "common": {},
            "ids": {
                "app": "{APP_ID}",
                "dom": "{DOM_ID}",
                "dsp": "{DSP_ID}",
                "edg": "{HOSTNAME}",
                "mqtt": "{app}_{dom}_dsp_{dsp}_edg_{edg}"
            }   
        }
    }
}